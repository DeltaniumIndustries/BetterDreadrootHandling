<?xml version="1.0" encoding="utf-8"?>
<options>
    <option ID="OptionDreadrootEnabled" DisplayText="Dreadroots: Enabled" Category="LaurusMods" Type="Checkbox" Default="Yes">
        <helptext>
        You can turn this mod on/off at any time.
        </helptext>
    </option>
    <option ID="OptionDreadrootLogging" DisplayText="Dreadroots: Logging (debug)" Category="LaurusMods" Type="Checkbox" Default="No" Requires="OptionDreadrootEnabled==Yes" />
    <option ID="OptionDreadrootSolid" DisplayText="Dreadroots: Solid" Category="LaurusMods" Type="Checkbox" Default="Yes" Requires="OptionDreadrootEnabled==Yes">
        <helptext>
        Will block pathing
        </helptext>
    </option>
    <option ID="OptionDreadrootHostile" DisplayText="Dreadroots: Hostile" Category="LaurusMods" Type="Checkbox" Default="Yes" Requires="OptionDreadrootEnabled==Yes">
        <helptext>
        Will make you attack them when auto-exploring
        </helptext>
    </option>
    <option ID="OptionDreadrootUpdateOld" DisplayText="Dreadroots: Update existing objects" Category="LaurusMods" Type="Checkbox" Default="No" Requires="OptionDreadrootEnabled==Yes">
        <helptext>
        Existing Dreadroots will be updated to be more attackable.
        </helptext>
    </option>
</options>